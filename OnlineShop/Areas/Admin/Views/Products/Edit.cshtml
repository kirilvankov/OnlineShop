@model ProductFormModel

<form method="post" enctype="multipart/form-data">
    <h2 class="text-center">Edit Product</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Item, etc...">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="The best product..."></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="0.00">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    @if (Model.ImageName != null)
    {
        <div class="form-group">
            <label asp-for="ImageName"></label>
            <input asp-for="ImageName" class="form-control" placeholder="0.00">
        </div>
    }
    <div class="form-group">
        <label asp-for="Image"></label>
        <input type="file" name="Image" asp-for="Image" class="form-control" placeholder="Image...">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <input class="btn btn-primary mt-3" value="Save" type="submit" />
</form>