@using OnlineShop.Models.Address

@model AddressInfoInputModel

@{
    ViewData["Title"] = "Delivery Address";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Delivery Address</h5>
        <form class="row g-3" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="col-12">
                <label asp-for="@Model.AddressLine1" class="form-label">Address</label>
                <input asp-for="@Model.AddressLine1" type="text" class="form-control" id="addressInfoAddressLine1" placeholder="1234 Main St">
                <span asp-validation-for="@Model.AddressLine1" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="@Model.AddressLine2" class="form-label">Address 2</label>
                <input asp-for="@Model.AddressLine2" type="text" class="form-control" id="addressInfoAddressLine2" placeholder="Apartment, studio, or floor">
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.City" class="form-label">City</label>
                <input asp-for="@Model.City" type="text" class="form-control" id="inputCity">
                <span asp-validation-for="@Model.City" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.Email" class="form-label">Email</label>
                <input asp-for="@Model.Email" type="email" class="form-control" id="inputCity">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="@Model.PhoneNumber" type="text" class="form-control" id="addressInfoEmail">
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="@Model.PostCode" class="form-label">Post Code</label>
                <input asp-for="@Model.PostCode" type="text" class="form-control" id="inputZip">
            </div>
            <div class="col-md-12 mt-3 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@Model.IsPrimary">
                    <label class="form-check-label" for="gridCheck2">
                        Save Address into my profile.
                    </label>
                </div>
            </div>
            
            <div class="text-center mt-3 ml-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>
