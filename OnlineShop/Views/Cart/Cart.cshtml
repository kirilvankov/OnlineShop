@model CartServiceModel

@{
    ViewBag.Tytle = "My Cart";
}


<div class="col-md-8 offset-2">
    <div class="container">
        @if (!Model.StoredItems.Any())
        {
            <h5>Your cart is Empty</h5>
            <a href="/Products/All" class="btn-link">View all products</a>
        }
    </div>
    @foreach (var item in Model.StoredItems)
    {
        <div class="row">
            <img class="img-thumbnail" width="150" height="200" src="~/media/@item.ImageItem" alt="@item.Name" />
            <div class="col">@item.Name</div>
            <div class="col">Quantity: @item.Quantity</div>
            <div class="col">Price: @item.Price</div>
            <div>
                <a asp-area="" asp-controller="Cart" asp-action="Decrease" asp-route-id="@item.ProductId" class="btn btn-outline-primary">-</a>
                <a asp-area="" asp-controller="Cart" asp-action="Add" asp-route-id="@item.ProductId" class="btn btn-outline-primary">+</a>
                <a asp-area="" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId" class="btn btn-outline-primary">Remove</a>
            </div>

        </div>
    }
    @if (Model.StoredItems.Any())
    {
        <div class="row text-right offset-9">Total Price: @Model.TotalPrice</div>
    }
</div>

