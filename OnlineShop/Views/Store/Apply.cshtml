@using OnlineShop.Models.Store
@model RegisterStoreFormModel

@{
    ViewData["Title"] = "Register Store";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Register Your Store</h5>
        <form class="row g-3" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-12">
                <label asp-for="@Model.Name" class="form-label">Store Name</label>
                <input asp-for="@Model.Name" type="text" class="form-control" id="storeName">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="@Model.Description" class="form-label">Store Description</label>
                <div>
                    <textarea asp-for="@Model.Description" class="form-control" style="height: 100px"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <label asp-for="@Model.AdditionalDetails" class="form-label">Additional details</label>
                <div>
                    <textarea asp-for="@Model.AdditionalDetails" class="form-control" style="height: 100px"></textarea>
                </div>
            </div>
            <div class="col-12">
                <label asp-for="@Model.AddressInfo.AddressLine1" class="form-label">Address</label>
                <input asp-for="@Model.AddressInfo.AddressLine1" type="text" class="form-control" id="addressInfoAddressLine1" placeholder="1234 Main St">
                <span asp-validation-for="@Model.AddressInfo.AddressLine1" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="@Model.AddressInfo.AddressLine2" class="form-label">Address 2</label>
                <input asp-for="@Model.AddressInfo.AddressLine2" type="text" class="form-control" id="addressInfoAddressLine2" placeholder="Apartment, studio, or floor">
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.AddressInfo.City" class="form-label">City</label>
                <input asp-for="@Model.AddressInfo.City" type="text" class="form-control" id="inputCity">
                <span asp-validation-for="@Model.AddressInfo.City" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.AddressInfo.Email" class="form-label">Email</label>
                <input asp-for="@Model.AddressInfo.Email" type="email" class="form-control" id="inputCity">
                <span asp-validation-for="@Model.AddressInfo.Email" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.AddressInfo.PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="@Model.AddressInfo.PhoneNumber" type="text" class="form-control" id="addressInfoEmail">
                <span asp-validation-for="@Model.AddressInfo.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="@Model.AddressInfo.PostCode" class="form-label">Post Code</label>
                <input asp-for="@Model.AddressInfo.PostCode" type="text" class="form-control" id="inputZip">
            </div>
            <div class="col-md-12 mt-3 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="addMap">
                    <label class="form-check-label" for="gridCheck2">
                        Add map location.
                    </label>
                </div>
            </div>
            <div class="col-md-6" id="lat">
                <label asp-for="@Model.AddressInfo.LocationLat" class="form-label">Location Latitude</label>
                <input asp-for="@Model.AddressInfo.LocationLat" type="number" class="form-control" id="inputZip" placeholder="42.697464">
            </div>
            <div class="col-md-6" id="lnt">
                <label asp-for="@Model.AddressInfo.LocationLng" class="form-label">Location Longitude</label>
                <input asp-for="@Model.AddressInfo.LocationLng" type="number" class="form-control" id="inputZip" placeholder="23.324152">
            </div>
            <div class="text-center mt-3 ml-3">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button id="resetBtn" type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        let latElement = document.getElementById('lat');
        let lntElement = document.getElementById('lnt');
        function hide(){
            latElement.style.display = 'none';
            lntElement.style.display = 'none';
        }
        hide();
        let checkBox = document.getElementById('addMap');
        checkBox.addEventListener('change', (e) => {
            e.preventDefault();
            toggle(latElement, lntElement, checkBox);
            function toggle(el1, el2, el3) {
                if (el3.checked == true) {
                    el1.style.display = 'block';
                    el2.style.display = 'block';
                } else {
                    el1.style.display = 'none';
                    el2.style.display = 'none';
                }
            }
        });
        let resetBtn = document.getElementById('resetBtn').addEventListener('click', () => {
            hide();
        });
    </script>
}